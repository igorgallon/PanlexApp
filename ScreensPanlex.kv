ScreenManagement:
    InitialScreen:
    SeeTasksScreen:
    TaskInfoScreen:
    EditTaskScreen:
    NewTaskScreen:
    SettingsScreen:
    EditSettingsScreen:

<InitialScreen>:
    name: 'initial'
    
    canvas:
        Rectangle:
            source: 'Panlex_InitialScreen.png'
            size: self.size
            pos: self.pos
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.5, 0.5)
        spacing: 10
        pos_hint: {'center_x': 0.5, 'y': 0}
        
        Button:
            text: 'Tasks'
            on_press: app.root.current = 'seetasks'
        Button:
            text: 'Add Task'
            on_press: app.root.current = 'newtask'    
        Button:
            text: 'Settings'
            on_press: app.root.current = 'settings'
        Button:
            text: 'Quit'
            on_press: App.get_running_app().stop()

<SeeTasksScreen>:
    name: 'seetasks'
    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint: (0.5, 0.15)
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        
        Button:
            text: 'OK'
            on_press: app.root.current = 'initial'
        Button:
            text: 'Cancel'
            on_press: app.root.current = 'initial'
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: (0.6, 0.4)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        
        Button:
            text: 'Task test 1'
            on_press: app.root.current = 'taskinfo'
        Button:
            text: 'Task test 2'
            on_press: app.root.current = 'taskinfo'
        Button:
            text: 'Task test 3'
            on_press: app.root.current = 'taskinfo'

<TaskInfoScreen>:
    name: 'taskinfo'

    BoxLayout:
        orientation: 'horizontal'        
        size_hint: (0.5, 0.15)
