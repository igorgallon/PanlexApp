<InitialScreen>:
    name: 'initial'
    
    canvas:
        Rectangle:
            source: 'Panlex_InitialScreen.png'
            size: self.size
            pos: self.pos
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.5, 0.5)
        spacing: 10
        pos_hint: {'center_x': 0.5, 'y': 0.03}
        
        Button:
            text: 'Tasks'
            on_press: app.root.current = 'seetasks'
        Button:
            text: 'Add Task'
            on_press: app.root.current = 'newtask'    
        Button:
            text: 'Settings'
            on_press: app.root.current = 'settings'
        Button:
            text: 'Quit'
            on_press: app.get_running_app().stop()

<TaskViewer>:
    cols: 1
    padding: 10
    spacing: 10
    height: self.minimum_height
    size_hint: None, None

<SeeTasksScreen>:
    name: 'seetasks'
    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint: (0.5, 0.15)
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        
        Button:
            text: 'OK'
            on_press: app.root.current = 'initial'
        Button:
            text: 'Cancel'
            on_press: app.root.current = 'initial'
        Button:
            text: 'Refresh'
            on_press: app.view_tasks(root)

    BoxLayout:

        orientation: 'horizontal'
        size_hint: (1, .8)
        pos_hint: {'top':1, 'right':1}

        ScrollView:
            id: task_panel
            size_hint:(.45, 1)

<TaskInfoScreen>:
    name: 'taskinfo'

    BoxLayout:
        orientation: 'horizontal'        
        size_hint: (0.5, 0.15)
        spacing: 20
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        
        Button:
            text: 'OK'
            on_press: app.root.current = 'seetasks'
        Button:
            text: 'Edit'
            on_press: app.root.current = 'edittask'

    GridLayout:
        cols: 2
        spacing: 5, 10
        size_hint: (0.8, 0.5)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Label:
            font_size: 28
            text: 'Description'
        Label:
            id: id_description
            font_size: 28
            text: root.description

        Label:
            font_size: 28
            text: 'Workload (hours)'
        Label:
            id: id_workload
            font_size: 28
            text: root.workload

        Label:
            font_size: 28
            text: 'Deadline (YYYYMMDD)'
        Label:
            id: id_deadline
            font_size: 28
            text: root.deadline

        Label:
            font_size: 28
            text: 'Priority (1-10)'
        Label:
            id: id_priority
            font_size: 28
            text: root.priority

        Label:
            font_size: 28
            text: 'Creation date'
        Label:
            id: id_creation
            font_size: 28
            text: root.creation

        Label:
            font_size: 28
            text: 'Done'
        Label:
            id: id_done
            font_size: 28
            text: root.done

<EditTaskScreen>:
    name: 'edittask'
    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint: (0.5, 0.15)
        pos_hint: {'center_x': 0.5, 'y': 0.1}
    
        Button:
            text: 'OK'
            on_press:
                root.ok_button()
                app.root.current = 'seetasks'

        Button:
            text: 'Cancel'
            on_press: app.root.current = 'taskinfo'
    
    GridLayout:
        cols: 2
        spacing: 5, 10
        size_hint: (0.8, 0.5)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

        Label:
            font_size: 28
            text: 'Description'
        TextInput:
            id: id_description
            font_size: 28
            text: root.description
        
        Label:
            font_size: 28
            text: 'Workload (hours)'
        TextInput:
            id: id_workload
            font_size: 28
            text: root.workload
        
        Label:
            font_size: 28
            text: 'Deadline'
        TextInput:
            id: id_deadline
            font_size: 28
            text: root.deadline

        Label:
            font_size: 28
            text: 'Priority'
        TextInput:
            id: id_priority
            font_size: 28
            text: root.priority

        Label:
            font_size: 28
            text: 'Done'
        TextInput:
            id: id_done
            font_size: 28
            text: root.done

        Button:
            text: 'Delete Task'
            on_press:
                root.del_button()
                app.root.current = 'seetasks'

