<SignupScreen>:
    name: 'signup'
    
    BoxLayout:
        Button:
            text: 'OK'
            on_press: app.root.current = 'login'
        Button:
            text: 'Back'
            on_press: app.root.current = 'login'
            
<TaskScreen>:
    name: 'task'
    
    BoxLayout:
        Button:
            text: 'Tasks'
            on_press: app.root.current = 'seetasks'
        Button:
            text: 'Add Task'
            on_press: app.root.current = 'newtask'
        Button:
            text: 'Edit Task'
            on_press: app.root.current = 'edittask'              
        Button:
            text: 'Settings'
            on_press: app.root.current = 'settings'
        Button:
            text: 'Quit'
            on_press: App.get_running_app().stop()

<SettingsScreen>:
    name: 'settings'
    
    BoxLayout:
        Button:
            text: 'OK'
            on_press: app.root.current = 'task' 
        Button:
            text: 'Cancel'
            on_press: app.root.current = 'task'

<NewTaskScreen>:
    name: 'newtask'
    
    BoxLayout:
        Button:
            id: f_but
            text: 'OK'
            on_press: root.on_event('Teste passa string')
        Button:
            text: 'Cancel'
            on_press: app.root.current = 'task'
        Label:
            text: 'Task Description'
        TextInput:
            id: id_text
            text: ''
            
<EditTaskScreen>:
    name: 'edittask'
    
    BoxLayout:
        Button:
            text: 'OK'
            on_press: app.root.current = 'task'
        Button:
            text: 'Cancel'
            on_press: app.root.current = 'task'
            
<SeeTasksScreen>:
    name: 'seetasks'
    
    BoxLayout:
        Button:
            text: 'OK'
            on_press: app.root.current = 'task'
        Button:
            text: 'Cancel'
            on_press: app.root.current = 'task'